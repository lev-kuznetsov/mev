<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>edu.dfci.cccb</groupId>
  <artifactId>mev</artifactId>
  <version>CRYSTAL-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>MultiExperiment Viewer</name>
  <url>http://github.com/dfci-cccb/mev</url>

  <modules>
    <module>prototype</module>
    <module>common</module>
    <module>dataset</module>

    <module>webapp</module>
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <mev.version>CRYSTAL-SNAPSHOT</mev.version>

    <java.source.version>1.7</java.source.version>
    <java.target.version>1.7</java.target.version>

    <jetty.version>9.1.3.v20140225</jetty.version>
    <c3p0.version>0.9.2.1</c3p0.version>
    <h2.version>1.3.175</h2.version>
    <commons-configuration.version>1.10</commons-configuration.version>
    <typesafe.config.version>1.2.1</typesafe.config.version>
    <guice.version>3.0</guice.version>
    <mycila-guice.version>2.10.ga</mycila-guice.version>
    <org.slf4j.version>1.7.6</org.slf4j.version>
    <log4j.version>1.2.17</log4j.version>
    <lombok.version>1.12.4</lombok.version>
    <lambdaj.version>2.3.3</lambdaj.version>
    <reflections.version>0.9.9-RC1</reflections.version>
    <google-api-services-drive.version>v2-rev126-1.18.0-rc</google-api-services-drive.version>

    <jquery.version>2.1.0-2</jquery.version>
    <jquery-ui.version>1.10.4</jquery-ui.version>
    <requirejs.version>2.1.11-1</requirejs.version>
    <angularjs.version>1.2.16</angularjs.version>
    <underscorejs.version>1.6.0-1</underscorejs.version>
    <log4javascript.version>1.4.5</log4javascript.version>

    <jackson.version>2.3.0</jackson.version>
    <google-collections.version>1.0</google-collections.version>
    <guava.version>16.0.1</guava.version>

    <mockito.version>1.9.5</mockito.version>
    <jsonassert.version>1.2.3</jsonassert.version>

    <maven-compiler-plugin.version>3.0</maven-compiler-plugin.version>
    <maven-source-plugin.version>2.2.1</maven-source-plugin.version>
    <jasmine-maven-plugin.version>1.3.1.5</jasmine-maven-plugin.version>
    <saga-maven-plugin.version>1.5.3</saga-maven-plugin.version>
  </properties>

  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>${java.source.version}</source>
          <target>${java.target.version}</target>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
          <fork>true</fork>
        </configuration>
      </plugin>

    </plugins>

  </build>

</project>
